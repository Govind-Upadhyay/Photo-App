<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @image.name %>
</p>

<p>
  <%= image_tag(@image.picture.url, size: "250x250") if @image.picture %>
</p>
<% if @image.user == current_user %>
<%= link_to 'Edit', edit_image_path(@image), class: "btn btn-info" %>
<% end %>
<%= link_to 'Back', images_path, class: "btn btn-primary" %>